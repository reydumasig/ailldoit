# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/ailldoit

# AI Service Keys
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_pro_api_key_here
REPLICATE_API_TOKEN=your_replicate_token_here

# Firebase Configuration
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# Firebase Admin (Server-side)
FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your_project_id"}

# Environment
NODE_ENV=development
SESSION_SECRET=your_session_secret_here

# Application Settings  
USE_VEO=true
USE_IMAGEN=true

# Social Media OAuth API Keys (for publishing)
META_APP_ID=your_facebook_app_id_here
META_APP_SECRET=your_facebook_app_secret_here
TIKTOK_CLIENT_KEY=your_tiktok_client_key_here
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret_here
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Frontend Environment Variables (prefix with VITE_)
VITE_META_APP_ID=your_facebook_app_id_here
VITE_META_CLIENT_TOKEN=your_facebook_client_token_here